{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    {
      "src": "/(.*)\\.(css|js|ico|jpg|jpeg|png|gif|webp|svg|pdf|txt)$",
      "handle": "filesystem"
    },
    {
      "src": "/",
      "dest": "/api/index.php"
    },
    {
      "src": "/(.*)",
      "dest": "/api/$1.php"
    }
  ]
}